{% extends "base.twig" %}
{% block title %}Chat{% endblock %}
{% block content %}
    <main class="app app_home" id="app" @keydown.ctrl.enter="addMessage">
        <div class="container">
            <div class="wrapper">
                {% include 'components/sidebar.twig' %}
                <section :class="['main-window', {collapsed: isActiveUsersPanel}]">
                    {% if message_to != false %}
                        {% include 'components/header.twig' %}
                        {% include 'components/body.twig' %}
                        {% include 'components/footer.twig' %}
                    {% endif %}
                </section>
            </div>
        </div>
    </main>
{% endblock %}

{% block custom_js %}
<script src="{{ home_url }}/static/js/main.js"></script>
{% endblock %}