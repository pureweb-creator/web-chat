{% extends "base.twig" %}
{# This extends Base #}

{% block title %}Login{% endblock %}

{% block content %}
    <main class="app app_auth" id="loginApp">
        <div class="container">
            <h1 class="title">Login</h1>
            <form class="form form_type_auth" @submit.prevent="doLogin">
                <input type="hidden" name="_token" value="{{ session._token }}" ref="_token">
                <label for="tel" class="form__label">
                    <input type="email" autocomplete="email" class="form__input" v-model="email" placeholder="E-mail">
                </label>
                <button type="submit" class="btn form__btn">Log in now</button>

                <p class="form-help form-help_status_error" v-if="response.success==false">[[ response.message ]]</p>

                <a href="{{ home_url }}/register" class="form__reg-link">Still don't have an account? Please, register.</a>
            </form>
        </div>
    </main>
{% endblock %}

{% block custom_js %}
    <script src="{{ home_url }}/static/js/login.js"></script>
{% endblock %}